<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<BorderPane minHeight="400.0" minWidth="300.0" prefHeight="600.0" prefWidth="900.0" stylesheets="@../estilos/inicio.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.InicioController">
   <center>
      <VBox alignment="CENTER" fillWidth="false" minHeight="300.0" minWidth="300.0" prefHeight="200.0" prefWidth="100.0" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <ImageView fitHeight="150.0" fitWidth="300.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/greenball%20título%20mix%20xd%201.1.png" />
               </image>
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </ImageView>
            <Button fx:id="inicioSesionButton" mnemonicParsing="false" onAction="#inicioSesionAction" prefHeight="70.0" prefWidth="230.0" style="-fx-background-color: black; -fx-border-color: white;" text="Iniciar sesión" textFill="WHITE">
               <font>
                  <Font size="20.0" />
               </font>
            </Button>
            <Label alignment="CENTER" text="¿Aún no te has registrado?" textFill="WHITE">
               <font>
                  <Font name="System Italic" size="16.0" />
               </font>
            </Label>
            <Button fx:id="registroButton" mnemonicParsing="false" onAction="#registroAction" prefHeight="40.0" prefWidth="210.0" style="-fx-background-color: black; -fx-border-color: white;" text="Registrarme" textFill="WHITE">
               <font>
                  <Font size="15.0" />
               </font>
            </Button>
            <Button fx:id="horariosButton" mnemonicParsing="false" onAction="#verHorarioAction" prefHeight="40.0" prefWidth="230.0" style="-fx-background-color: black; -fx-border-color: green;" text="Ver Horarios" textFill="WHITE" />
         </children>
      </VBox>
   </center>
</BorderPane>
