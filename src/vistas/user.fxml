<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="900.0" styleClass="pane" stylesheets="@../estilos/VistaPerfil.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.UserController">
   <center>
      <VBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="432.0" prefWidth="623.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <ImageView fitHeight="150.0" fitWidth="250.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/greenball1.png" />
               </image>
            </ImageView>
            <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
            <Button fx:id="reservarButton" mnemonicParsing="false" prefHeight="30.0" prefWidth="150.0" styleClass="buttons" stylesheets="@../estilos/VistaPerfil.css" text="Reservar" />
            <Button fx:id="misReservasButton" mnemonicParsing="false" prefHeight="30.0" prefWidth="150.0" styleClass="buttons" stylesheets="@../estilos/VistaPerfil.css" text="Mis Reservas" />
            <Button fx:id="configButton" mnemonicParsing="false" prefHeight="30.0" prefWidth="150.0" styleClass="buttons" stylesheets="@../estilos/VistaPerfil.css" text="Configuraciones">
               <VBox.margin>
                  <Insets bottom="30.0" />
               </VBox.margin></Button>
            <Button fx:id="salirButton" mnemonicParsing="false" prefHeight="30.0" prefWidth="150.0" styleClass="buttons" stylesheets="@../estilos/VistaPerfil.css" text="Salir" />
         </children>
      </VBox>
   </center>
